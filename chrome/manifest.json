{
  "name": "Pomodoro",

  "version": "1.0.0",

  "description": "Pomodoro kitchen timer for Chrome.",

  "background": {
    "page": "background.html"
  },

  "browser_action": {
    "default_icon": "img/icon_default.png"
  },

  "permissions": [
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "options_page": "options.html",

  "icons": { "48": "img/icon48.png" },

  "web_accessible_resources": [
    "img/icon48.png", "img/bg.png"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "manifest_version": 2
}
